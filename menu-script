#!/usr/bin/bash

rm menu.sh
rm menu.sh.1
rm menu.sh.2
rm menu.sh.3
rm menu.sh.4
rm menu.sh.5
rm menu.sh.6
rm menu.sh.7
rm menu.sh.8
rm menu.sh.9
rm menu.sh.10
rm menu.sh.11
rm menu.sh.12

apt-get update -y
sudo apt-get install curl
sudo apt-get install bash

clear
#tải x-ui
bash <(curl -Ls https://raw.githubusercontent.com/sprov065/x-ui/master/install.sh) 
chmod +x install.sh

clear
#tải bộ cài menu chính
wget https://raw.githubusercontent.com/DauDau432/menu-CD/main/menu.sh 
chmod +x menu.sh

clear
#tải bộ cài menu x-ui
bash <(curl -Ls https://raw.githubusercontent.com/DauDau432/menu-CD/main/CD_menu_x-ui.sh)
chmod +x CD_menu_x-ui.sh

clear
./CD_menu.sh
